/* pages/detail/detail.wxss */
.detail-contain{
  display: flex;
  flex-direction: column;
}
.hanldeImg{
  width:100%;
  height:460rpx;
}
.avatar{
  padding:10rpx;
}
.avatar image{
  width:64rpx;
  height:64rpx;
  vertical-align: middle;
}
.avatar text{
  font-size: 32rpx;
  margin-left:10rpx;
}
.title{
  font-size: 38rpx;
  font-weight:bold;
  margin-left:10rpx;
}
.content-contain{
  float:right;
  margin-right:50rpx;
}
.content{
  position: relative;
}
.content-contain image{
  width:90rpx;
  height:90rpx;
  margin-right:20rpx;
}
.line{
  width:90%;
  height:1rpx;
  background: #eee;
  position: absolute;
  top:45rpx;
  left:5%;
  z-index:-1;
}
button{
  width:280rpx;
  height:80rpx;
}
.text{
  font-size: 32rpx;
  text-indent: 32rpx;
  margin-top:20rpx;
}
.music{
  width:60rpx;
  height:60rpx;
  position: absolute;
  top:200rpx;
  left:50%;
  margin-left:-30rpx;
}