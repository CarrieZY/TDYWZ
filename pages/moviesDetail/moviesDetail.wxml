<!--pages/moviesDetail/moviesDetail.wxml-->
<view class='movies-detail'>
  <image src='{{moviesDetail.images.large}}' class='movie-img'></image>
  <text class='title'>{{moviesDetail.title}}</text>
  <view class='content'>
    <text>评分：{{moviesDetail.rating.average}}</text>
    <text>导演：{{moviesDetail.directors[0].name}}</text>
    <text>主演：{{moviesDetail.casts[0].name}}{{moviesDetail.casts[1].name}}{{moviesDetail.casts[2].name}}</text>
  </view>
  <button>我要观影</button>
</view>